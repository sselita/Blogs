
@model BlogPlatform.Domain.Models.BlogPost

@{
    ViewData["Title"] = "Delete Blog Post";
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<!-- Include necessary Bootstrap CSS and JavaScript in your layout -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
@* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script> *@
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Custom CSS for additional styling -->
<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        background-attachment: fixed;
    }
    .card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-danger {
        border-radius: 20px;
        padding: 10px 20px;
    }
    .btn-secondary {
        border-radius: 20px;
        padding: 10px 20px;
    }
    .confirmation-text {
        font-size: 1.2em;
        font-weight: bold;
        color: #dc3545;
    }
</style>

<h1 class="display-4 text-center my-4 text-black">Delete Blog Post</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4">
                <div class="card-body">
                    <h3 class="confirmation-text text-center">Are you sure you want to delete this blog post?</h3>
                    <hr />
                    <h4>@Model.Title</h4>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Title
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Title
                        </dd>
                        <dt class="col-sm-2">
                            Content
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Content
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-danger mr-2">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
