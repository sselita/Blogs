
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@model IPagedList<BlogPlatform.Domain.Models.BlogPost>

@{
    ViewData["Title"] = "Blog Posts";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        background-attachment: fixed;
    }

    .card {
        background-color: #ffffff;
    }

    .card-header {
        background-color: #007bff;
    }

    .card-footer {
        background-color: #f8f9fa;
    }

    .pagination-container {
        margin-top: 20px;
    }

    .pagination .page-item .page-link {
        color: #007bff;
    }

    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

<h1 class="display-4 text-center my-4 text-black">Blog Posts</h1>

<div class="text-center mb-3">
    <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-lg"></i> Create New
    </a>
</div>

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <input type="text" id="searchTitle" class="form-control" placeholder="Search by title">
        </div>
        <div class="col-md-4">
            <input type="date" id="searchDate" class="form-control">
        </div>
        <div class="col-md-2">
            <button id="searchBtn" class="btn btn-primary btn-block">Search</button>
        </div>
    </div>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3" id="blogPostsContainer">
        @foreach (var item in Model)
        {
            <div class="col mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header text-white">
                        <h5 class="card-title">@item.Title</h5>
                        <small>@item.CreatedAt.ToString("MMMM dd, yyyy")</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @if (item.Content.Length > 100)
                            {
                                @Html.Raw(item.Content.Substring(0, 100) + "…")
                            }
                            else
                            {
                                @Html.Raw(item.Content)
                            }
                        </p>
                        <a class="btn btn-link text-primary" data-toggle="collapse" href="#collapseContent-@item.Id" role="button" aria-expanded="false" aria-controls="collapseContent-@item.Id">
                            Read more
                        </a>
                        <div class="collapse mt-2" id="collapseContent-@item.Id">
                            <p>@Html.Raw(item.Content)</p>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="pagination-container mt-4 d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions()
   {
       ActiveLiElementClass = "active",
       DisplayLinkToFirstPage = PagedListDisplayMode.Always,
       DisplayLinkToLastPage = PagedListDisplayMode.Always,
       DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
       DisplayLinkToNextPage = PagedListDisplayMode.Always,
       Display = PagedListDisplayMode.Always,
       LinkToPreviousPageFormat = "Previous",
       LinkToNextPageFormat = "Next",
       LinkToFirstPageFormat = "First",
       LinkToLastPageFormat = "Last",
       MaximumPageNumbersToDisplay = 5
   })
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#searchBtn').click(function () {
                var title = $('#searchTitle').val();
                var date = $('#searchDate').val();
                $.ajax({
                    url: '@Url.Action("Index", "Blog")',
                    type: 'GET',
                    data: {
                        title: title,
                        date: date
                    },
                    success: function (result) {
                        $('#blogPostsContainer').html($(result).find('#blogPostsContainer').html());
                        $('.pagination-container').html($(result).find('.pagination-container').html());
                    }
                });
            });
        });
    </script>
}
