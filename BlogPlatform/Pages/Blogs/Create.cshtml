@page
@model BlogPlatform.Pages.Blogs.CreateModel

@{
    ViewData["Title"] = "Create";
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Create New Blog Post</h4>
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="BlogPost.UserId" value="@userId" />
                        <input type="hidden" asp-for="BlogPost.CreatedAt" value="@DateTime.Now" />
                        <div class="mb-3">
                            <label asp-for="BlogPost.Title" class="form-label"></label>
                            <input asp-for="BlogPost.Title" class="form-control" />
                            <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BlogPost.Content" class="form-label"></label>
                            <textarea asp-for="BlogPost.Content" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="BlogPost.Content" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
