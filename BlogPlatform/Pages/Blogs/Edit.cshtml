@page
@model BlogPlatform.Pages.Blogs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlogPost.Id" />
            <div class="form-group">
                <label asp-for="BlogPost.Title" class="control-label"></label>
                <input asp-for="BlogPost.Title" class="form-control" />
                <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.Content" class="control-label"></label>
                <input asp-for="BlogPost.Content" class="form-control" />
                <span asp-validation-for="BlogPost.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.CreatedAt" class="control-label"></label>
                <input asp-for="BlogPost.CreatedAt" class="form-control" />
                <span asp-validation-for="BlogPost.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPost.UserId" class="control-label"></label>
                <input asp-for="BlogPost.UserId" class="form-control" />
                <span asp-validation-for="BlogPost.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
